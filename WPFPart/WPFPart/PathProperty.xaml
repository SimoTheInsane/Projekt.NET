<UserControl x:Class="WPFPart.PathSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFPart"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="PathTextBox" HorizontalAlignment="Stretch" Margin="20,10,10,10" MinWidth="480" MaxHeight="30" IsEnabled="False"></TextBox>
            <Button HorizontalAlignment="Right" Margin="20,10,20,10" MinWidth="80" MaxHeight="30" Content="Wybierz" Click="BrowseButton_Click" />
        </StackPanel>
    </Grid>
</UserControl>
